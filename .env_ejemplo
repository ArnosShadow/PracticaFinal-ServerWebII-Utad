# Puerto del servidor
PORT=3000

# URI de conexión a MongoDB
DB_URI=mongodb+srv://<USUARIO>:<CONTRASEÑA>@<CLUSTER>.mongodb.net/

# URL pública del proyecto
PUBLIC_URL=http://localhost:3000

# Credenciales de Pinata para IPFS
PINATA_GATEWAY_URL=<TU_PINATA_GATEWAY_URL>
PINATA_KEY=<TU_PINATA_API_KEY>
PINATA_SECRET=<TU_PINATA_API_SECRET>

# Clave secreta JWT para autenticación
JWT=<TU_JWT_SECRET>

# Credenciales para envío de correos (OAuth2)
EMAIL=<TU_EMAIL>
CLIENT_ID=<TU_GOOGLE_CLIENT_ID>
CLIENT_SECRET=<TU_GOOGLE_CLIENT_SECRET>
REFRESH_TOKEN=<TU_GOOGLE_REFRESH_TOKEN>
REDIRECT_URI=https://developers.google.com/oauthplayground

# Webhook de Slack para reportes de errores
SLACK_WEBHOOK=https://hooks.slack.com/services/TXXXX/BXXXX/XXXXXXXX
